{
	"name": "shell-format",
	"displayName": "shell-format",
	"description": "the bash shell code format",
	"version": "1.1.1",
	"publisher": "foxundermoon",
	"engines": {
		"vscode": "^1.8.0"
	},
	"categories": [
		"Languages",
		"Formatters"
	],
	"activationEvents": [
		"onLanguage:shellscript"
	],
	"main": "./out/src/extension",
	"capabilities": {
		"documentFormattingProvider": "true"
	},
	"icon": "Bash_Scripting.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/foxundermoon/vs-shell-format.git"
	},
	"bugs": {
		"url": "https://github.com/foxundermoon/vs-shell-format/issues"
	},
	"keywords": [
		"shellscript",
		"format",
		"shell",
		"bash"
	],
	"contributes": {
		"commands": [
			{
				"command": "shell.format.shfmt",
				"title": "format shell with shfmt"
			}
		],
		"languages": [
			{
				"id": "shellscript",
				"extensions": [
					".sh"
				]
			}
		],
		"configuration": {
			"type": "object",
			"title": "shell-format configuration",
			"properties": {
				"shellformat.path": {
					"type": [
						"string",
						"null"
					],
					"default": null,
					"description": "the shfmt fullpath  example[ mac,linux ] /usr/local/bin/shfmt  [windows] C:/bin/shfmt.exe   download fron https://github.com/mvdan/sh/releases"
				},
				"shellformat.flag": {
					"type": [
						"string",
						"null"
					],
					"default": null,
					"description": "shfmt -h  to see detail usage , example: -i 4 -p"
				},
				"shellformat.showError": {
					"type": "boolean",
					"default": true,
					"description": "show error message when format error"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "tsc -p ./",
		"compile": "tsc -watch -p ./",
		"clean": "rm -rf out/",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.32",
		"@types/node": "^6.0.40",
		"mocha": "^2.3.3",
		"typescript": "^2.1.4",
		"vscode": "^1.0.0"
	},
	"dependencies": {
		"diff": "~3.0.0"
	},
	"__metadata": {
		"id": "5fb19573-2183-4cf2-b53d-0fb869dae7ae",
		"publisherId": "c5bb2216-aaba-47a1-962e-5561e40c03c5",
		"publisherDisplayName": "foxundermoon"
	}
}